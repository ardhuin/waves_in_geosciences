@ARTICLE{kyotoh_etal:2000_J.FluidMech._413_317a,
  AUTHOR = { Kyotoh, H.  and  Fujii, S.  and  To, D. V. },
  TITLE = {Currents induced by long waves propagating towards a beach over a wavy bed },
