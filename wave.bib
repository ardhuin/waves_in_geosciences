@ARTICLE{hietarinta:1988_J.Math.Phys._29_3_628a,
  AUTHOR = { Hietarinta, J. },
  TITLE = {A search for bilinear equations passing {H}irota's three-soliton condition. {IV}. {C}omplex bilinear equations },
